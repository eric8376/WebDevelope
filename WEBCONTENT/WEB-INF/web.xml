<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>shResWeb</display-name>
	<context-param id="ContextParam_1">
		<param-name>contextConfigLocation</param-name>
		<param-value>
			WEB-INF/etc/spring/base.xml
			WEB-INF/etc/spring/base-service.xml
			WEB-INF/etc/spring/base-ws.xml
		</param-value>
	</context-param>
	<listener>
	    <listener-class>
	      org.springframework.web.context.ContextLoaderListener
	    </listener-class>
	</listener>
	<filter id="Filter_1">
		<filter-name>Charset Encoding</filter-name>
		<filter-class>
			com.microwill.framework.client.web.util.CharacterEncodingFilter
		</filter-class>
		<init-param id="InitParam_1">
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
   <filter-mapping >
		<filter-name>Charset Encoding</filter-name>
		<servlet-name>JSONServiceCall</servlet-name>
	</filter-mapping>
	<filter-mapping >
		<filter-name>Charset Encoding</filter-name>
		<servlet-name>/*</servlet-name>
	</filter-mapping>

 
  
    <servlet>
        <servlet-name>spring</servlet-name>
        <servlet-class>com.microwill.framework.web.AppServlet</servlet-class>
    </servlet>
	<servlet>
    	<servlet-name>JSONServiceCall</servlet-name>
         <servlet-class>com.microwill.framework.rpc.JSONServiceCallServlet</servlet-class>
         <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet> 
        <servlet-name>CXFServlet</servlet-name> 
        <servlet-class> 
            org.apache.cxf.transport.servlet.CXFServlet  
        </servlet-class> 
        <load-on-startup>1</load-on-startup> 
    </servlet> 
 
    <servlet-mapping> 
        <servlet-name>CXFServlet</servlet-name> 
        <url-pattern>/Service/*</url-pattern> 
    </servlet-mapping> 
	<servlet-mapping >
		<servlet-name>JSONServiceCall</servlet-name>
		<url-pattern>/JSONServiceCall</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>*.spr</url-pattern>
    </servlet-mapping>
    <jsp-config>
   		<taglib>
   			<taglib-uri>microwill</taglib-uri>
   			<taglib-location>/WEB-INF/tld/zte.tld</taglib-location>
 		</taglib>
    </jsp-config>
	<resource-ref id="ResourceRef">
		<description>RES DataSource</description>
		<res-ref-name>jdbc/oracle/ResTxDataSource</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	<resource-ref id="ResourceRef2">
		<description>RES DataSource</description>
		<res-ref-name>jdbc/ResTxDataSource</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
</web-app>
